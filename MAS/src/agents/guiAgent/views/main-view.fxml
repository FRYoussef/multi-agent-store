            <BorderPane BorderPane.alignment="CENTER">
               <center>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="_tfInput" promptText="Chat with the bot" HBox.hgrow="ALWAYS" />
